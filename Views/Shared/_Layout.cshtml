@{
    var allowHeader = ViewData["Header"] != null ? (bool)ViewData["Header"] : true;
    Context.Items.TryGetValue("APPDATAHTTP", out var userObj );
    UserAccount account = userObj as UserAccount;
}
    <!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - JustSupportSystem</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/JustSupportSystem.styles.css" asp-append-version="true" />
    <link href="~/dist/css/tabler.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    @if (allowHeader)
    {
        <header class="navbar navbar-expand-md d-print-none">
            <div class="container-xl">
                <!-- BEGIN NAVBAR TOGGLER -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbar-menu" aria-controls="navbar-menu" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <!-- END NAVBAR TOGGLER -->
                <!-- BEGIN NAVBAR LOGO -->
                <div class="navbar-brand navbar-brand-autodark d-none-navbar-horizontal pe-0 pe-md-3">
                    <a href="." aria-label="Tabler">
                        JustSupportSystem
                    </a>
                </div>
                <!-- END NAVBAR LOGO -->
                <div class="navbar-nav flex-row order-md-last">
                    <div class="nav-item dropdown">
                        <a href="#" class="nav-link d-flex lh-1 p-0 px-2" data-bs-toggle="dropdown" aria-label="Open user menu">
                            <span class="avatar avatar-sm" style="background-image: url(./static/avatars/003m.jpg)"> </span>
                            <div class="d-none d-xl-block ps-2">
                                <div>@account.FullName</div>
                                <div class="mt-1 small text-secondary">@account.GetUserRoleEnum().ToString().Replace("_"," ")</div>
                            </div>
                        </a>
                        <div class="dropdown-menu dropdown-menu-end dropdown-menu-arrow">
                            @if (account.GetUserRoleEnum() == UserRoleEnum.Client_User || account.GetUserRoleEnum() == UserRoleEnum.Client_Manager)
                            {
                                <a href="/access-point/password-change" class="dropdown-item">Password Change</a>
                            }
                            <a href="/access-point/logout" class="dropdown-item">Logout</a>
                        </div>
                    </div>
                </div>
                <div class="collapse navbar-collapse" id="navbar-menu">
                    <div class="d-flex flex-column flex-md-row flex-fill align-items-stretch align-items-md-center">
                        <!-- BEGIN NAVBAR MENU -->
                        <ul class="navbar-nav">
                            <li class="nav-item active">
                                <a class="nav-link" href="/">
                                    <span class="nav-link-title">Home</span>
                                </a>
                            </li>
                            @if (account.GetUserRoleEnum() == UserRoleEnum.System_Admin || account.GetUserRoleEnum() == UserRoleEnum.Client_Manager)
                            {
                                <li class="nav-item">
                                    <a class="nav-link" href="/companies/1">
                                        <span class="nav-link-title">Companies</span>
                                    </a>
                                </li>
                            }
                            @if (account.GetUserRoleEnum() == UserRoleEnum.System_Admin || account.GetUserRoleEnum() == UserRoleEnum.Client_Manager)
                            {
                                <li class="nav-item">
                                    <a class="nav-link" href="/agents/1">
                                        <span class="nav-link-title">Agents</span>
                                    </a>
                                </li>
                            }
                            @if (account.GetUserRoleEnum() == UserRoleEnum.System_Admin)
                            {
                                <li class="nav-item">
                                    <a class="nav-link" href="/admin">
                                        <span class="nav-link-title">Admin</span>
                                    </a>
                                </li>
                            }
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#navbar-third" data-bs-toggle="dropdown" data-bs-auto-close="outside" role="button" aria-expanded="false">
                                    <span class="nav-link-title">Support Tickets</span>
                                </a>
                                <div class="dropdown-menu">
                                    <a class="dropdown-item" href="/tickets/1?status=-1">All</a>
                                    <a class="dropdown-item" href="/tickets/1?status=1">Opened</a>
                                    <a class="dropdown-item" href="/tickets/1?status=2">Closed</a>
                                    <a class="dropdown-item" href="/tickets/1?status=3">Escalated</a>
                                    <a class="dropdown-item" href="/tickets/1?assignedToMe=1">Assigned to me</a>
                                    <a class="dropdown-item" href="/tickets/1?assignedToMe=2">Created By Me</a>
                                </div>
                            </li>
                        </ul>
                        <!-- END NAVBAR MENU -->
                    </div>
                </div>
            </div>
        </header>
    }
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

   
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
