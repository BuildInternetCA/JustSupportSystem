@model UserAccount
@{
    ViewData["Title"] = "Bar Code";
}

<div class="row">
    <div class="col-md-12">
        <br/>
        <div class="alert alert-warning alert-dismissible" role="alert">
            <div class="alert-icon">
                <!-- Download SVG icon from http://tabler.io/icons/icon/alert-triangle -->
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="icon alert-icon icon-2">
                    <path d="M12 9v4"></path>
                    <path d="M10.363 3.591l-8.106 13.534a1.914 1.914 0 0 0 1.636 2.871h16.214a1.914 1.914 0 0 0 1.636 -2.87l-8.106 -13.536a1.914 1.914 0 0 0 -3.274 0z"></path>
                    <path d="M12 16h.01"></path>
                </svg>
            </div>
          Please take screenshot/save image and share with client user. Do not share URL with user as it will not work. 
        </div>
    </div>
    <div class="col-md-6">
      
        <div class="card">
            <div class="card-header">
                <h3>Scan this bar code with Microsoft/Google Authenticator App</h3>
            </div>
            <div class="card-body">
                <img src="@ViewBag.BarCodeUrl" />
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h3>User Information</h3>
            </div>
            <div class="card-body">
                <p><strong>Full Name:</strong> @Model.FullName</p>
                <p><strong>Email:</strong> @Model.Email</p>
                <hr/>
                <ul class="steps steps-counter steps-vertical">
                      <li class="step-item">Open Authenticator App (Google/Microsoft)</li>
                      <li class="step-item">Add new Account</li>
                      <li class="step-item">Scan the Bar code</li>
                      <li class="step-item">New account as HelixSupport will be added</li>
                    <li class="step-item active">You will require this code on next login</li>
                    </ul>
            </div>
        </div>
    </div>
</div>
